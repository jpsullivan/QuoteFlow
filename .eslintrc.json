{
    "extends": "google",
    "installedESLint": true,

    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "windows"],
        "max-len": ["warn", 130],
        "no-lonely-if": 0,
        "object-curly-spacing": 0,
        "quote-props": 0,
        "space-before-function-paren": ["error", "always"]
    },

    "globals": {
        "QuoteFlow": false,
        "JST": false,
        "jQuery": true,
        "Handlebars": true,
        "AJS": false,
        "define": false,
        "require": false,
        "jasmine" : false,
        "describe" : false,
        "it" : false,
        "expect" : false,
        "beforeEach" : false,
        "afterEach" : false,
        "spyOn" : false
    }
}
