<div role="dialog" id="asset_var_selection_modal" class="aui-layer aui-dialog2 aui-dialog2-medium" aria-hidden="true">
    <header class="aui-dialog2-header">
        <h1 class="aui-dialog2-header-main">Set an asset var field</h1>
    </header>

    <div class="aui-dialog2-content">
        <form class="aui">
            <h3>Select an existing Asset Var</h3>
            <select class="select">
                <option>Select an AssetVar</option>
                {{#each assetVars}}
                <option value="{{Id}}">{{Name}}</option>
                {{/each}}
            </select>
            
            <h3>Or create a new one</h3>
            <div class="field-group">
                <label for="new_asset_var">Name</label>
                <input class="text" type="text" id="new_aset_var" name="new_asset_var" />
            </div>
        </form>
    </div>

    <footer class="aui-dialog2-footer">
        <div class="aui-dialog2-footer-actions">
            <button id="dialog-create" class="aui-button">Create</button>
            <button id="dialog-close-button" class="aui-button aui-button-link">Close</button>
        </div>
    </footer>
</div>
