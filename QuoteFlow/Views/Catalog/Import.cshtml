@using QuoteFlow.Infrastructure.Extensions
@model QuoteFlow.Models.RequestModels.ImportCatalogRequest

@{
    Layout = "../Shared/_FocusedLayout.cshtml";
    ViewBag.Title = "QuoteFlow - Import Catalog";
}

<h2>Import a new catalog</h2>
<span class="secondary-link">
    You can also <a href="@Url.ImportCatalog()">import a catalog</a>
</span>
@using (Html.BeginForm("Import", "Catalog", FormMethod.Post, new { id = "request_form", enctype = "multipart/form-data", @class = "aui" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <div class="field-group">
            <label for="catalog_file">Catalog File</label>
            <input type="file" name="UploadFile"/>
        </div>
    </fieldset>

    <div id="file_upload_progress" class="aui-progress-indicator">
        <span class="aui-progress-indicator-value"></span>
    </div>

    <div class="buttons-container">
        <div class="buttons">
            <input class="aui-button aui-button-primary" type="submit" id="submit" name="submit" value="Create catalog">
            <a id="cancel" class="aui-button aui-button-link" name="cancel" accesskey="c" href="#">Cancel</a>
        </div>
    </div>
}

<script type="text/javascript" src="@Url.Content("~/Scripts/async-file-upload.js")"></script>
<script>
    AJS.$(document).ready(function () {
        $(function () {
            AsyncFileUploadManager.init(
                '@Url.Action(actionName: "ImportCatalogProgress", controllerName: "Catalog")',
                'uploadForm',
                '@Scripts.Url("~/Scripts/jquery-1.10.2.min.js")');
        });
    });
</script>