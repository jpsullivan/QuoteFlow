@using QuoteFlow.Infrastructure.Extensions
@model QuoteFlow.Models.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Index";
}

@if (!Model.SkipGettingStarted)
{
    @Html.Partial("Partials/Dashboard/GettingStarted")
    <div class="marketing-page-footer"><button id="getting-started-footer-cta-button" class="aui-button aui-button-subtle">Git back to it</button><p>If you’d like to learn more, check out our <a href="https://www.atlassian.com/git" target="_blank" id="getting-started-footer-gitmicrosite-link">beginner’s guide to Git</a>.</p><p>Looking for a powerful desktop Git client? <a href="http://www.sourcetreeapp.com" target="_blank" id="getting-started-footer-sourcetree-link">Get SourceTree for free</a>.</p></div>
}
else
{
    <header class="aui-page-header">
        <div class="aui-page-header">
            <div class="aui-page-header-inner">
                <h1>Dashboard</h1>
            </div>
        </div>
    </header>

    <div class="aui-page-panel fixed-right">
        <div class="aui-page-panel-inner">
            <section class="aui-page-panel-content">
                <h3>Catalogs <a href="@Url.NewCatalog()" class="aui-button">New Catalog</a></h3>

                @if (Model.Catalogs != null)
                {
                <table class="aui">
                    <thead>
                        <tr>
                            <th>Catalog</th>
                            <th>Description</th>
                            <th>Total Assets</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var catalog in Model.Catalogs)
                        {
                        <tr>
                            <td><a href="@Url.Catalog(catalog.Id, catalog.Name.UrlFriendly())">@catalog.Name</a></td>
                            <td>@catalog.Description</td>
                            <td>123</td>
                        </tr>
                        }
                    </tbody>
                </table>
                }

                <h3>Quotes</h3>

                @if (Model.Quotes != null)
                {
                    foreach (var quote in Model.Quotes)
                    {
                <br />
                <a href="@Url.Quote(quote.Id, quote.Name.UrlFriendly())">@quote.Name</a>
                    }
                }
            </section>

            <aside class="aui-page-panel-sidebar">
                <section>
                    <div class="welcome-mat welcome-mat-small getting-started">
                        <h3>
                            <a href="http://docs.atlassian.com/stash/docs-032/Stash+Documentation+Home">Getting started</a>
                        </h3>
                        <p>All the information you need to get started in Stash.</p>
                    </div>
                    <div class="welcome-mat welcome-mat-small workflows">
                        <h3>
                            <a href="http://docs.atlassian.com/stash/docs-032/Workflow+strategies+in+Stash">Branching and forking</a>
                        </h3>
                        <p>Learn about Git workflows for Enterprise teams.</p>
                    </div>
                    <div class="welcome-mat welcome-mat-small development">
                        <h3>
                            <a href="https://developer.atlassian.com/stash/docs/latest/">API</a>
                        </h3>
                        <p>Customise Stash via the API and plugin framework.</p>
                    </div>
                    <div class="welcome-mat welcome-mat-small administration">
                        <h3>
                            <a href="http://docs.atlassian.com/stash/docs-032/Administering+Stash">Administering Stash</a>
                        </h3>
                        <p>Configure Stash for your Enterprise teams.</p>
                    </div>
                </section>
            </aside>
        </div>
    </div>
}
