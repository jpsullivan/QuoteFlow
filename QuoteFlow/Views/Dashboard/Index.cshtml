@using QuoteFlow.Infrastructure.Extensions
@model QuoteFlow.Models.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Index";
}

<header class="aui-page-header">
    <div class="aui-page-header">
        <div class="aui-page-header-inner">
            <h1>Dashboard</h1>
        </div>
    </div>
</header>

<div class="aui-page-panel">
    <div class="aui-page-panel-inner">
        <section class="aui-page-panel-content">
            <h3>Recent Quotes</h3>

            <a href="@Url.NewCatalog()" class="aui-button">New Catalog</a>

            @if (Model.Catalogs != null)
            {
                foreach (var catalog in Model.Catalogs)
                {
                    <br />
                    <a href="@Url.Catalog(catalog.Id, catalog.Name.UrlFriendly())">@catalog.Name</a>
                }
            }
        </section>

    </div>
</div>
