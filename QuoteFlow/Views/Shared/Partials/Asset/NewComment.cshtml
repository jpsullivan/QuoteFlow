@using QuoteFlow.Infrastructure.Extensions
@model QuoteFlow.Api.Models.ViewModels.Assets.NewAssetCommentViewModel
@using (Html.BeginForm("AddComment", "Asset", new { assetId = Model.AssetId, assetName = Model.AssetName.UrlFriendly() }, FormMethod.Post, new { @class = "aui top-label ajs-dirty-warning-exempt" }))
{
    <div class="form-body">
        <div class="hidden">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.AssetId)
        </div>
        <div class="field-group aui-field-wikiedit comment-input">
            <label for="comment">Comment</label>

            <div class="wiki-edit">
                <div style="height: 300px; display: none;">&nbsp;</div>
                <div id="comment-wiki-edit" class="wiki-edit-content">
                    @Html.TextAreaFor(m => m.Comment, new { @class = "textarea long-field", @cols = 60, @rows = 10, @wrap = "virtual", @style = "overflow-y: auto; height: 200px; display: inline-block;" })
@*                    <textarea class="textarea long-field wiki-textfield" cols="60" id="comment" name="comment" rows="10" wrap="virtual" style="overflow-y: auto; height: 200px; display: inline-block;"></textarea>*@
                    <div class="content-inner"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="buttons-container form-footer">
        <div class="buttons">
            <input accesskey="s" class="aui-button" id="asset-comment-add-submit" name="Add" title="Press Alt+s to submit this form" type="submit" value="Add">
            <a accesskey="`" class="aui-button aui-button-link cancel" href="#" id="asset_comment_add_cancel" title="Press Alt+` to cancel">Cancel</a>
        </div>
    </div>
}
