@using QuoteFlow.Api.Models
@using QuoteFlow.Models
@{ ViewBag.Title = "QuoteFlow - Quotes"; }

<div class="row">
    <div class="content-toolbar span12">
        <div class="clearfix">
            <a href="/quote/new" class="btn">Create a new quote</a>
        </div>
        <h4>Contacts <span class="secondary">(1–1 of 1)</span></h4>
    </div>
</div>
<div class="row">
    <div class="content-list span12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Total Price</th>
                    <th>Responded</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Quote quote in Model) {
                    @Html.Partial("Partials/Quote/ListItem", quote, new ViewDataDictionary { {"quote", quote }})
                }
            </tbody>
        </table>
    </div>
</div>